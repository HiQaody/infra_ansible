server {
    server_name {{ item.domain }}.{{ item.tld | default('agvm.mg') }};

    root {{ item.root | default('/var/www/html/' + item.name) }};
    index index.php index.html index.htm;

    {% if item.client_max_body_size is defined %}
    client_max_body_size {{ item.client_max_body_size }};
    {% else %}
    client_max_body_size 128M;
    {% endif %}

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php{{ php_version }}-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # Sécurité supplémentaire
        fastcgi_hide_header X-Powered-By;
        fastcgi_read_timeout 300;
    }

    location ~ /\.ht {
        deny all;
    }

    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        log_not_found off;
    }

    # Sécurité
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;

    {% if ssl_enabled %}
    listen 443 ssl http2;
    ssl_certificate /etc/letsencrypt/live/{{ item.domain }}.{{ item.tld | default('agvm.mg') }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ item.domain }}.{{ item.tld | default('agvm.mg') }}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
    {% endif %}
}

{% if ssl_enabled %}
server {
    server_name {{ item.domain }}.{{ item.tld | default('agvm.mg') }};
    listen 80;
    return 301 https://$host$request_uri;
}
{% endif %}