{% if item.type == 'proxy' %}
server {
    server_name {{ item.domain }}.{{ item.tld | default('agvm.mg') }};

    {% if item.client_max_body_size is defined %}
    client_max_body_size {{ item.client_max_body_size }};
    {% endif %}

    location / {
        proxy_pass http://localhost:{{ item.port }};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        
        # Timeouts
        proxy_connect_timeout 30s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
        
        {% if item.websocket is defined and item.websocket %}
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_cache_bypass $http_upgrade;
        {% endif %}
    }

    # Sécurité
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;

}

{% endif %}

{% if item.type == 'php' %}

server {
    server_name {{ item.domain }}.{{ item.tld | default('agvm.mg') }};

    root {{ item.root | default('/var/www/html/' + item.name) }};
    index index.php index.html index.htm;

    {% if item.client_max_body_size is defined %}
    client_max_body_size {{ item.client_max_body_size }};
    {% else %}
    client_max_body_size 128M;
    {% endif %}

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php{{ php_version }}-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # Sécurité supplémentaire
        fastcgi_hide_header X-Powered-By;
        fastcgi_read_timeout 300;
    }

    location ~ /\.ht {
        deny all;
    }

    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        log_not_found off;
    }

    # Sécurité
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;

}
{% endif %}


